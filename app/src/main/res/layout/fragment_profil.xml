<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ProfilFragment">
<LinearLayout
    android:gravity="center"
    android:id="@+id/profile_top"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">
   <ImageView
    android:id="@+id/profil_picture"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:src="@drawable/nav_profile_picture" />

   <ImageView
       android:id="@+id/change_profile_photo"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="8dp"
       android:layout_centerHorizontal="true"
       android:src="@drawable/ic_menu_camera"/>
</LinearLayout>

<TextView
    android:id="@+id/text1"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="Hanife Cennet ALKAN"
    android:layout_below="@+id/profile_top" />

<TextView
   android:id="@+id/text2"
   android:layout_centerHorizontal="true"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginTop="40dp"
   android:text="Fotoğraf çekmeyi seven, bir gezgin."
   android:layout_below="@+id/text1" />

<TextView
   android:id="@+id/text3"
   android:layout_centerHorizontal="true"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginTop="40dp"
   android:text="Gezdiği İller:Trabzon,Mardin,İzmir,İstanbul"
   android:layout_below="@+id/text2"/>

<ImageView
    android:id="@+id/instagram"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:src="@drawable/instagram_ic"
    android:layout_below="@+id/text3" />

</RelativeLayout>